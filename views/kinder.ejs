                                <div class="col-title">ÏûêÎ£åÎ™Ö</div>
                                <div class="col-action">Îã§Ïö¥Î°úÎìú</div>
                            </div>
                            <!-- Rows -->
                            <% preschoolAIItems.forEach(item=> { %>
                                <div class="apple-list-row">
                                    <div class="col-category">
