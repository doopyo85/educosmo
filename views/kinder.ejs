            <!-- ÌÉ≠ ÏΩòÌÖêÏ∏† -->
            <div class="tab-content mt-3">
                <style>
                    /* üî• Apple-Style Table Design */
                    .apple-table-container {
                        background: #ffffff;
                        border-radius: 20px;
                        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
                        overflow: hidden;
                        border: 1px solid rgba(0, 0, 0, 0.04);
                        margin-bottom: 30px;
                    }

                    .table-responsive {
                        overflow-x: auto;
                        -webkit-overflow-scrolling: touch;
                        /* Smooth scrolling on iOS */
                    }

                    .apple-table {
                        width: 100%;
                        border-collapse: collapse;
                        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
                    }

                    .apple-table th {
                        text-align: left;
                        padding: 18px 25px;
                        font-size: 13px;
                        font-weight: 600;
                        color: #86868b;
                        background: #fafafa;
                        border-bottom: 1px solid #efeef1;
                        white-space: nowrap;
                    }

                    .apple-table td {
                        padding: 20px 25px;
                        vertical-align: middle;
                        border-bottom: 1px solid #efeef1;
                        font-size: 15px;
                        color: #1d1d1f;
                    }

                    .apple-table tr:last-child td {
                        border-bottom: none;
                    }

                    .apple-table tr:hover td {
                        background-color: #fbfbfd;
                    }

                    /* Badges */
                    .apple-badge {
                        display: inline-block;
                        padding: 6px 12px;
                        border-radius: 20px;
                        font-size: 12px;
                        font-weight: 600;
                        letter-spacing: -0.01em;
                    }

                    .badge-primary {
                        background: #eef2ff;
                        color: #4338ca;
                    }

                    .badge-success {
                        background: #f0fdf4;
                        color: #15803d;
                    }

                    .badge-blue {
                        background: #ebf8ff;
                        color: #0369a1;
                    }

                    .badge-purple {
                        background: #f3e8ff;
                        color: #7e22ce;
                    }

                    /* Buttons */
                    .btn-apple-outline {
                        border: 1px solid #e5e5e5;
                        background: white;
                        color: #1d1d1f;
                        padding: 6px 14px;
                        border-radius: 18px;
                        font-size: 13px;
                        font-weight: 500;
                        transition: all 0.2s;
                        text-decoration: none;
                        display: inline-flex;
                        align-items: center;
                        gap: 6px;
                    }

                    .btn-apple-outline:hover {
                        border-color: #0071e3;
                        color: #0071e3;
                        background: #f5faff;
                        transform: translateY(-1px);
                    }

                    .btn-apple-outline i {
                        font-size: 14px;
                    }

                    /* Mobile Adjustments */
                    @media (max-width: 768px) {

                        .apple-table th,
                        .apple-table td {
                            padding: 15px 15px;
                        }

                        .content-cell {
                            min-width: 200px;
                            /* Ensure readability */
                        }
                    }

                    .nav-pills .nav-link {
                        border-radius: 20px;
                        padding: 10px 25px;
                        font-weight: 600;
                        margin: 0 5px;
                        color: #86868b;
                    }

                    .nav-pills .nav-link.active {
                        background-color: #1d1d1f;
                        color: white;
                    }
                </style>

                <div class="tab-content mt-4">
                    <!-- Preschool Tab -->
                    <div id="preschool" class="tab-pane fade show active">
                        <div class="apple-table-container">
                            <div class="table-responsive">
                                <table class="apple-table">
                                    <thead>
                                        <tr>
                                            <th style="width: 100px;">Î∂ÑÎ•ò</th>
                                            <th>ÏûêÎ£åÎ™Ö</th>
                                            <th style="text-align: right; width: 150px;">Îã§Ïö¥Î°úÎìú</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% preschoolItems.forEach(item=> { %>
