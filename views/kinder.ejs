                                </button>
                            </li>
                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#board-ai">
                                    <%= preschoolAITitle %>
                                </button>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <!-- Preschool List -->
                            <div class="tab-pane fade show active" id="board-preschool">
                                <div class="apple-list-container">
                                    <div class="apple-list-header">
                                        <div class="col-category">Î∂ÑÎ•ò</div>
                                        <div class="col-title">ÏûêÎ£åÎ™Ö</div>
                                        <div class="col-action">Îã§Ïö¥Î°úÎìú</div>
                                    </div>
                                    <% let prevType='' ; preschoolItems.forEach((item, index)=> {
                                        let showType = (item.type !== prevType);
                                        prevType = item.type;
                                        %>
                                        <div class="apple-list-row">
                                            <div class="col-category">
                                                <% if (showType) { %>
