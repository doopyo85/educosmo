                                                        <i class="bi bi-robot"></i>
                                                        <span class="d-none d-sm-inline">
                                                            <%= linkText %>
                                                        </span>
                                                    </a>
                                                    <% } %>
                                                        <% }); %>
                                                            <% if (item.links.length===0) { %>
                                                                <span class="text-muted"
