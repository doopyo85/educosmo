                                                            <% } else { %>
                                                                <%= item.content %>
                                                                    <% } %>
                                            </div>
                                            <div class="col-action">
                                                <% if (item.url && item.url.trim()) { %>
                                                    <a href="<%= item.url %>" target="_blank" class="btn-apple-outline"
                                                        aria-label="Îã§Ïö¥Î°úÎìú">
                                                        <i class="bi bi-cloud-download"></i>
                                                        <span class="d-none d-sm-inline mobile-hidden-text">Îã§Ïö¥Î°úÎìú</span>
                                                    </a>
                                                    <% } else { %>
                                                        <span class="text-muted small">Ï§ÄÎπÑÏ§ë</span>
                                                        <% } %>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>

                            <!-- Preschool AI List -->
                            <div class="tab-pane fade" id="board-ai">
                                <div class="apple-list-container">
                                    <div class="apple-list-header">
                                        <div class="col-category">Î∂ÑÎ•ò</div>
                                        <div class="col-title">ÏûêÎ£åÎ™Ö</div>
                                        <div class="col-action">Îã§Ïö¥Î°úÎìú</div>
                                    </div>
                                    <% let prevAiType='' ; preschoolAIItems.forEach((item, index)=> {
                                        let showAiType = (item.type !== prevAiType);
                                        prevAiType = item.type;
                                        %>
                                        <div class="apple-list-row">
                                            <div class="col-category">
                                                <% if (showAiType) { %>
                                                    <span class="apple-badge badge-success">
                                                        <%= item.type %>
                                                    </span>
                                                    <% } %>
                                            </div>
                                            <div class="col-title">
                                                <% if (Array.isArray(item.content)) { %>
                                                    <% item.content.forEach((line, i)=> { %>
                                                        <div class="<%= i > 0 ? 'mt-2' : '' %>">
                                                            <%= line %>
                                                        </div>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <%= item.content %>
                                                                    <% } %>
                                            </div>
                                            <div class="col-action">
                                                <% if (item.url && item.url.trim()) { %>
                                                    <a href="<%= item.url %>" target="_blank" class="btn-apple-outline"
                                                        aria-label="Îã§Ïö¥Î°úÎìú">
                                                        <i class="bi bi-robot"></i>
                                                        <span class="d-none d-sm-inline mobile-hidden-text">Îã§Ïö¥Î°úÎìú</span>
                                                    </a>
                                                    <% } else { %>
                                                        <span class="text-muted small">Ï§ÄÎπÑÏ§ë</span>
                                                        <% } %>
                                            </div>
                                        </div>
                                        <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Panel 2: Lessons (Card Grid) - MOVED TO SECOND -->
                <div class="tab-pane fade" id="panel-lessons" role="tabpanel">

                    <!-- Sub Level Tabs -->
                    <ul class="nav nav-pills sub-nav-pills justify-content-center mb-4" id="levelTabs" role="tablist">
                        <% if (lessonTabs && lessonTabs.length> 0) { %>
                            <% lessonTabs.forEach((tab, index)=> { %>
                                <li class="nav-item">
                                    <button class="nav-link <%= index === 0 ? 'active' : '' %>" id="<%= tab.id %>-tab"
                                        data-bs-toggle="pill" data-bs-target="#<%= tab.id %>" type="button" role="tab">
                                        <% if (tab.title.toLowerCase().includes('ai')) { %>
                                            <i class="bi bi-robot me-1"></i>
                                            <% } %>
                                                <%= tab.title %>
                                    </button>
                                </li>
                                <% }); %>
                                    <% } else { %>
                                        <!-- Fallback or Empty State -->
                                        <li class="nav-item">
                                            <span class="nav-link disabled">No Categories Found</span>
                                        </li>
                                        <% } %>
                    </ul>

                    <!-- Lesson Content -->
                    <div class="tab-content" id="levelTabContent">
                        <% function renderCardGrid(levelId, groups, isActive) { %>
                            <div class="tab-pane fade <%= isActive ? 'show active' : '' %>" id="<%= levelId %>"
                                role="tabpanel">
                                <div class="container" style="max-width: 1400px;">
                                    <% if (groups.length===0) { %>
                                        <div class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1"></i>
                                            <p class="mt-3">Îì±Î°ùÎêú ÏΩòÌÖêÏ∏†Í∞Ä ÏóÜÏäµÎãàÎã§.</p>
                                        </div>
                                        <% } %>

                                            <% groups.forEach((group)=> { %>
                                                <div class="group-header">
                                                    <%= group.title %>
                                                </div>
                                                <div
                                                    class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4 mb-4">
                                                    <% group.sessions.forEach((session)=> { %>
                                                        <div class="col">
                                                            <div class="kinder-card" data-title="<%= session.name %>"
                                                                data-topic="<%= session.topic %>"
                                                                data-video="<%= session.videoUrl %>"
                                                                data-images='<%= JSON.stringify(session.images) %>'
                                                                onclick="openLessonModal(this)">

                                                                <div class="kinder-card-thumb">
                                                                    <% if (session.thumbnail) { %>
                                                                        <img src="<%= session.thumbnail %>"
                                                                            alt="<%= session.name %>" loading="lazy">
                                                                        <% } else { %>
                                                                            <div
                                                                                class="d-flex align-items-center justify-content-center h-100 text-muted bg-light">
                                                                                <i class="bi bi-image fs-1"></i>
                                                                            </div>
                                                                            <% } %>

                                                                                <% if (session.videoUrl) { %>
                                                                                    <div
                                                                                        class="position-absolute bottom-0 end-0 m-2 badge bg-dark bg-opacity-75 rounded-pill">
                                                                                        <i
                                                                                            class="bi bi-play-fill text-white"></i>
                                                                                    </div>
                                                                                    <% } %>
                                                                </div>

                                                                <div class="kinder-card-body">
                                                                    <h5 class="kinder-card-title text-truncate">
                                                                        <%= session.name %>
                                                                    </h5>
                                                                    <p class="kinder-card-topic text-truncate">
                                                                        <%= session.topic %>?
                                                                            "&nbsp;" : session.topic
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                                <% }); %>
                                </div>
                            </div>
                            <% } %>

                                <% if (lessonTabs && lessonTabs.length> 0) { %>
                                    <% lessonTabs.forEach((tab, index)=> { %>
                                        <%= renderCardGrid(tab.id, tab.groups, index===0) %>
                                            <% }); %>
                                                <% } %>
                    </div>

                </div>
            </div>

            <!-- Viewer Modal -->
            <div class="modal fade" id="viewerModal" tabindex="-1" aria-labelledby="viewerModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div>
                                <h5 class="modal-title fw-bold" id="viewerModalLabel">ÏàòÏóÖ Î≥¥Í∏∞</h5>
                                <p class="text-muted small mb-0" id="viewerModalTopic">Ï£ºÏ†ú ÏÑ§Î™Ö</p>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Video Container -->
                            <div id="modalVideoContainer"></div>

                            <!-- Carousel Container -->
                            <div id="modalCarouselContainer"></div>
                        </div>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                // Modal Instance
                let viewerModal;

                document.addEventListener('DOMContentLoaded', () => {
                    viewerModal = new bootstrap.Modal(document.getElementById('viewerModal'));
                });

                function openLessonModal(element) {
                    const title = element.dataset.title;
                    const topic = element.dataset.topic;
                    const videoUrl = element.dataset.video;
                    const images = JSON.parse(element.dataset.images || '[]');

                    // Update Header
                    document.getElementById('viewerModalLabel').textContent = title;
                    document.getElementById('viewerModalTopic').textContent = topic;

                    // Update Video
                    const videoContainer = document.getElementById('modalVideoContainer');
                    if (videoUrl) {
                        let embedUrl = videoUrl;
                        if (videoUrl.includes('youtu.be/')) embedUrl = videoUrl.replace('youtu.be/', 'www.youtube.com/embed/');
                        else if (videoUrl.includes('watch?v=')) embedUrl = videoUrl.replace('watch?v=', 'embed/');

                        videoContainer.innerHTML = `
                    <div class="video-wrapper">
                        <iframe src="${embedUrl}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>`;
                    } else {
                        videoContainer.innerHTML = '';
                    }

                    // Update Carousel
                    const carouselContainer = document.getElementById('modalCarouselContainer');
                    if (images.length > 0) {
                        const indicators = images.map((_, i) =>
                            `<button type="button" data-bs-target="#carouselGuide" data-bs-slide-to="${i}" class="${i === 0 ? 'active' : ''}" aria-current="${i === 0}"></button>`
                        ).join('');

                        const items = images.map((img, i) => `
                    <div class="carousel-item ${i === 0 ? 'active' : ''}">
                        <img src="${img}" class="d-block w-100" alt="Guide Image ${i + 1}">
                    </div>
                `).join('');

                        carouselContainer.innerHTML = `
                    <h5 class="fw-bold mb-3 border-start border-4 border-primary ps-2">ÍµêÏÇ¨ ÏßÄÎèÑÏÑú</h5>
                    <div id="carouselGuide" class="carousel slide bg-light rounded" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            ${indicators}
                        </div>
                        <div class="carousel-inner">
                            ${items}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselGuide" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselGuide" data-bs-slide="next">
                            <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                `;
                    } else {
                        carouselContainer.innerHTML = videoUrl ? '' : '<div class="alert alert-secondary text-center">Îì±Î°ùÎêú ÏΩòÌÖêÏ∏†Í∞Ä ÏóÜÏäµÎãàÎã§.</div>';
                    }

                    viewerModal.show();
                }
            </script>
</body>

</html>