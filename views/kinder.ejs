            <div class="tab-content mt-3">
                <style>
                    /* üî• Apple-Style List Design (Board-like) */
                    .apple-list-container {
                        max-width: 1000px;
                        margin: 0 auto 40px auto;
                        background: #ffffff;
                        border-radius: 20px;
                        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
                        overflow: hidden;
                        border: 1px solid rgba(0, 0, 0, 0.04);
                    }

                    .apple-list-header {
                        display: flex;
                        background-color: #fafafa;
                        border-bottom: 1px solid #efeef1;
                        padding: 18px 20px;
                        font-weight: 600;
                        color: #86868b;
                        font-size: 13px;
                    }

                    .apple-list-row {
                        display: flex;
                        align-items: center;
                        padding: 20px 20px;
                        border-bottom: 1px solid #efeef1;
                        transition: background-color 0.2s;
                        text-decoration: none;
                        color: inherit;
                    }

                    .apple-list-row:last-child {
                        border-bottom: none;
                    }

                    .apple-list-row:hover {
                        background-color: #fbfbfd;
                    }

                    /* Column Widths & Alignment */
                    .col-category {
                        width: 15%;
                        text-align: center;
                        flex-shrink: 0;
                    }

                    .col-title {
                        width: 65%;
                        text-align: center;
                        /* üî• Requested Center Alignment */
                        font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
                        font-size: 15px;
                        font-weight: 600;
                        color: #1d1d1f;
                        padding: 0 15px;
                    }

                    .col-action {
                        width: 20%;
                        text-align: center;
                        flex-shrink: 0;
                    }

                    /* Badges */
                    .apple-badge {
                        display: inline-block;
                        padding: 6px 14px;
                        border-radius: 20px;
                        font-size: 12px;
                        font-weight: 600;
                        letter-spacing: -0.01em;
                    }

                    .badge-primary {
                        background: #eef2ff;
                        color: #4338ca;
                    }

                    .badge-success {
                        background: #f0fdf4;
                        color: #15803d;
                    }

                    /* Buttons */
                    .btn-apple-outline {
                        border: 1px solid #e5e5e5;
                        background: white;
                        color: #1d1d1f;
                        padding: 6px 16px;
                        border-radius: 18px;
                        font-size: 13px;
                        font-weight: 500;
                        transition: all 0.2s;
                        text-decoration: none;
                        display: inline-flex;
                        align-items: center;
                        justify-content: center;
                        gap: 6px;
                    }

                    .btn-apple-outline:hover {
                        border-color: #0071e3;
                        color: #0071e3;
                        background: #f5faff;
                        transform: translateY(-1px);
                    }

                    /* Mobile Responsive (Stacking) */
                    @media (max-width: 768px) {
                        .apple-list-header {
                            display: none;
                        }

                        /* Hide header on mobile */

                        .apple-list-row {
                            flex-direction: column;
                            gap: 12px;
                            padding: 20px;
                            text-align: center;
                        }

                        .col-category,
                        .col-title,
                        .col-action {
                            width: 100%;
                            text-align: center;
                        }

                        .col-title {
                            font-size: 16px;
                            margin: 5px 0;
                        }
                    }

                    .nav-pills .nav-link {
                        border-radius: 20px;
                        padding: 10px 25px;
                        font-weight: 600;
                        margin: 0 5px;
                        color: #86868b;
                    }

                    .nav-pills .nav-link.active {
                        background-color: #1d1d1f;
                        color: white;
                    }
                </style>

                <div class="tab-content mt-4">
                    <!-- Preschool Tab -->
                    <div id="preschool" class="tab-pane fade show active">
                        <div class="apple-list-container">
                            <!-- Header -->
