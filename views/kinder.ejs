        <!-- Custom Scripts -->
        <script>
            // Modal Instance
            let viewerModal;

            document.addEventListener('DOMContentLoaded', function () {
                viewerModal = new bootstrap.Modal(document.getElementById('viewerModal'));

                // Auto-open modal if hash present (optional logic from before)
                // ...
            });

            // Toggle Main Tabs
            function switchMainTab(tabName) {
                // Update Tab UI
                const allTabs = document.querySelectorAll('.doodle-tab-main');
                allTabs.forEach(el => el.classList.remove('active'));
                document.getElementById(`tab-${tabName}-trigger`).classList.add('active');

                // Show Panel
                document.querySelectorAll('.doodle-panel').forEach(el => el.style.display = 'none');
                document.getElementById(`panel-${tabName}`).style.display = 'block';

                // Optional: Change Paper Border Color dynamically
                const paper = document.querySelector('.doodle-paper');
                if (tabName === 'lessons') {
                    document.querySelector('.doodle-tab-main.active').style.borderBottomColor = 'var(--doodle-tertiary)';
                }
            }

            function openLessonModal(element) {
                const title = element.getAttribute('data-title');
                const topic = element.getAttribute('data-topic');
                const videoUrl = element.getAttribute('data-video');
                const images = JSON.parse(element.getAttribute('data-images') || '[]');

                document.getElementById('viewerModalLabel').textContent = title;
                document.getElementById('viewerModalTopic').textContent = topic;

                const videoContainer = document.getElementById('modalVideoContainer');
                const carouselContainer = document.getElementById('modalCarouselContainer');

                videoContainer.innerHTML = '';
                carouselContainer.innerHTML = '';

                // Render Video
                if (videoUrl) {
                    let embedUrl = videoUrl;
                    if (videoUrl.includes('youtu.be') || videoUrl.includes('youtube.com')) {
                        const videoId = videoUrl.split('/').pop().split('?')[0];
                        embedUrl = 'https://www.youtube.com/embed/' + videoId;
                    }
                    videoContainer.innerHTML = `
                    <div class="ratio ratio-16x9 mb-3" style="border: 2px solid #000; border-radius: 10px; overflow: hidden;">
                        <iframe src="${embedUrl}" allowfullscreen></iframe>
                    </div>
                `;
                }

                // Render Images Carousel
                if (images && images.length > 0) {
                    // ... (existing carousel logic if needed, simplified for now)
                    let slideIndicators = '';
                    let slideItems = '';

                    images.forEach((img, index) => {
                        slideIndicators += `<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="${index}" class="${index === 0 ? 'active' : ''}" aria-current="true"></button>`;
                        slideItems += `
                        <div class="carousel-item ${index === 0 ? 'active' : ''}">
                            <img src="${img}" class="d-block w-100 rounded" alt="Slide ${index}">
                        </div>
                    `;
                    });

                    carouselContainer.innerHTML = `
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">${slideIndicators}</div>
                        <div class="carousel-inner">${slideItems}</div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </button>
                    </div>
                `;
                }

                viewerModal.show();
            }
        </script>
</body>

