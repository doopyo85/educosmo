        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            let currentCategory = 'all';
            let currentSort = 'latest';
            let allPosts = [];

            // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
            document.addEventListener('DOMContentLoaded', function () {
                loadPosts();
            });

            // ì¹´í…Œê³ ë¦¬ ì„ íƒ
            function selectCategory(category) {
                currentCategory = category;

                // ì‚¬ì´ë“œë°” í™œì„±í™” ìƒíƒœ ì—…ë°ì´íŠ¸
                document.querySelectorAll('.board-category-item').forEach(item => {
                    item.classList.remove('active');
                });

                // í´ë¦­ëœ ì¹´í…Œê³ ë¦¬ í™œì„±í™”
                const categoryLinks = {
                    'all': 'a[href="/board"]',
                    'notice': 'a[href="/board/notice"]',
                    'education': 'a[href="/board/education"]',
                    'free': 'a[href="/board/free"]'
                };

                if (categoryLinks[category]) {
                    document.querySelector(categoryLinks[category]).classList.add('active');
                }

                // ì œëª© ì—…ë°ì´íŠ¸
                const titles = {
                    'all': 'ì „ì²´ ê²Œì‹œíŒ',
                    'notice': 'ì—…ë°ì´íŠ¸ ë…¸íŠ¸',
                    'education': 'êµìœ¡ì •ë³´',
                    'free': 'ììœ ê²Œì‹œíŒ'
                };
                document.getElementById('contentTitle').textContent = titles[category];

                // ê²Œì‹œê¸€ ë‹¤ì‹œ ë¡œë“œ
                loadPosts();
            }

            // ê²Œì‹œê¸€ ëª©ë¡ ë¡œë“œ
            async function loadPosts() {
                const postList = document.getElementById('postList');
                const loadingSpinner = document.getElementById('loadingSpinner');

                // ë¡œë”© ìŠ¤í”¼ë„ˆ í‘œì‹œ
                if (loadingSpinner) {
                    loadingSpinner.style.display = 'block';
                }

                postList.innerHTML = '<div class="text-center p-4" id="loadingSpinner"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">ë¡œë”© ì¤‘...</span></div></div>';

                try {
                    let url = '/api/board/posts';
                    if (currentCategory !== 'all') {
                        url += `?category=${currentCategory}`;
                    }

                    const response = await fetch(url);
                    const data = await response.json();

                    allPosts = data.posts || [];
                    renderPosts();
                } catch (error) {
                    console.error('ê²Œì‹œê¸€ ë¡œë“œ ì˜¤ë¥˜:', error);
                    postList.innerHTML = `
                    <div class="empty-state">
                        <i class="bi bi-exclamation-triangle"></i>
                        <h5>ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤</h5>
                        <p>ê²Œì‹œê¸€ì„ ë¶ˆëŸ¬ì˜¤ëŠ” ì¤‘ ë¬¸ì œê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.</p>
                    </div>
                `;
                }
            }

            // ğŸ”¥ ê²Œì‹œê¸€ ë Œë”ë§ - í•œ ì¤„ í˜•íƒœë¡œ ìˆ˜ì •
            function renderPosts() {
                const postList = document.getElementById('postList');

                if (allPosts.length === 0) {
                    postList.innerHTML = `
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>ê²Œì‹œê¸€ì´ ì—†ìŠµë‹ˆë‹¤</h5>
                        <p>ì²« ë²ˆì§¸ ê²Œì‹œê¸€ì„ ì‘ì„±í•´ë³´ì„¸ìš”!</p>
                    </div>
                `;
                    return;
                }

                // ì •ë ¬ ì ìš©
                let sortedPosts = [...allPosts];
                switch (currentSort) {
                    case 'views':
                        sortedPosts.sort((a, b) => (b.views || 0) - (a.views || 0));
                        break;
                    case 'comments':
                        sortedPosts.sort((a, b) => (b.comment_count || 0) - (a.comment_count || 0));
                        break;
                    default: // latest
                        sortedPosts.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
                }

                const postsHtml = sortedPosts.map(post => {
                    const categoryInfo = getCategoryInfo(post.category_slug);
                    const isNew = isPostNew(post.created_at);

                    return `
                    <div class="post-item ${post.is_notice ? 'notice' : ''} ${post.is_pinned ? 'pinned' : ''}" 
                         onclick="viewPost('${post.category_slug}', ${post.id})">
                        
                        <!-- ì¹´í…Œê³ ë¦¬ -->
                        <span class="post-category ${post.category_slug}">${categoryInfo.name}</span>
                        
                        <!-- ì œëª© ì„¹ì…˜ -->
                        <div class="post-title-section">
                            <div class="post-title">
                                ${post.title}
                                ${post.attachment_count > 0 ? '<i class="bi bi-paperclip attachment-icon"></i>' : ''}
                            </div>
                        </div>
                        
                        <!-- ìƒíƒœ ë±ƒì§€ë“¤ -->
                        <div class="post-badges">
                            ${post.is_notice ? '<span class="badge-notice">ê³µì§€</span>' : ''}
                            ${post.is_pinned ? '<span class="badge-pinned">ê³ ì •</span>' : ''}
                            ${isNew ? '<span class="badge-new">N</span>' : ''}
                        </div>
                        
                        <!-- ë©”íƒ€ ì •ë³´ -->
                        <div class="post-meta-info">
                            <span class="meta-author">${post.author_name || post.author}</span>
                            <span class="meta-views"><i class="bi bi-eye"></i> ${formatViews(post.views || 0)}</span>
                            <span class="meta-views"><i class="bi bi-chat-dots"></i> ${post.comment_count || 0}</span>
                            <span class="meta-views"><i class="bi bi-hand-thumbs-up"></i> ${post.like_count || 0}</span>
                            <span class="meta-time">${formatTime(post.created_at)}</span>
                        </div>
                    </div>
                `;
                }).join('');

                postList.innerHTML = postsHtml;
            }

            // ì¹´í…Œê³ ë¦¬ ì •ë³´ ê°€ì ¸ì˜¤ê¸°
            function getCategoryInfo(slug) {
                const categories = {
                    'notice': { name: 'ì—…ë°ì´íŠ¸', icon: 'bi-megaphone' },
                    'education': { name: 'êµìœ¡', icon: 'bi-book' },
                    'free': { name: 'ììœ ', icon: 'bi-chat-dots' }
                };
                return categories[slug] || { name: 'ê¸°íƒ€', icon: 'bi-file-text' };
            }

            // ìƒˆ ê²Œì‹œê¸€ íŒë³„ (24ì‹œê°„ ì´ë‚´)
            function isPostNew(createdAt) {
                const now = new Date();
                const postDate = new Date(createdAt);
                return (now - postDate) < 24 * 60 * 60 * 1000;
            }

            // ğŸ”¥ ì¡°íšŒìˆ˜ í¬ë§· (1k, 1.2k í˜•íƒœ)
            function formatViews(views) {
                if (views >= 1000000) {
                    return (views / 1000000).toFixed(1).replace('.0', '') + 'M';
                }
                if (views >= 1000) {
                    return (views / 1000).toFixed(1).replace('.0', '') + 'k';
                }
                return views.toString();
            }

            // ğŸ”¥ ì‹œê°„ í¬ë§· (HH:MM ë˜ëŠ” MM-DD í˜•íƒœ)
            function formatTime(dateString) {
                const date = new Date(dateString);
                const now = new Date();
                const diff = now - date;

                // ì˜¤ëŠ˜ì´ë©´ ì‹œê°„ìœ¼ë¡œ í‘œì‹œ
                if (diff < 24 * 60 * 60 * 1000) {
                    const hours = String(date.getHours()).padStart(2, '0');
                    const minutes = String(date.getMinutes()).padStart(2, '0');
                    return `${hours}:${minutes}`;
                }

                // ì´ë²ˆ ë…„ë„ë©´ ì›”-ì¼ë¡œ í‘œì‹œ
                if (date.getFullYear() === now.getFullYear()) {
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const day = String(date.getDate()).padStart(2, '0');
                    return `${month}-${day}`;
                }

                // ë‹¤ë¥¸ ë…„ë„ë©´ ë…„ë„ í¬í•¨
                return date.toLocaleDateString('ko-KR', {
                    year: '2-digit',
                    month: '2-digit',
                    day: '2-digit'
                });
            }

            // ì •ë ¬ ë³€ê²½
            function sortPosts() {
                currentSort = document.getElementById('sortSelect').value;
                renderPosts();
            }

            // ê²Œì‹œê¸€ ë³´ê¸°
            function viewPost(category, id) {
                window.location.href = `/board/${category}/${id}`;
            }

            // ê¸€ì“°ê¸°
            function writePost() {
                if (currentCategory === 'all') {
                    window.location.href = '/board/write';
                } else {
                    window.location.href = `/board/write?category=${currentCategory}`;
                }
            }

            // ì¹´í…Œê³ ë¦¬ ë„¤ë¹„ê²Œì´ì…˜ í´ë¦­ ì´ë²¤íŠ¸
            document.querySelectorAll('.board-category-item').forEach(item => {
                item.addEventListener('click', function (e) {
                    e.preventDefault();

                    const href = this.getAttribute('href');

                    if (href === '/board') {
                        selectCategory('all');
                    } else if (href === '/board/notice') {
                        selectCategory('notice');
                    } else if (href === '/board/education') {
                        selectCategory('education');
                    } else if (href === '/board/free') {
                        selectCategory('free');
                    }
                });
            });
        </script>

