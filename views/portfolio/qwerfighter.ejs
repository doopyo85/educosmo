                firebase.auth().signOut()
                    .catch(error => {
                        console.error('로그아웃 오류:', error);
                    });
            });
            
            // 최고 점수 가져오기
            function getHighScore(userId) {
                return firebase.firestore().collection('scores').doc(userId).get()
                    .then(doc => {
                        if (doc.exists && doc.data().highScore) {
                            return doc.data().highScore;
                        }
                        return 0;
                    })
                    .catch(error => {
                        console.error('점수 가져오기 오류:', error);
                        return 0;
                    });
            }
            
            // 인증 상태 감지
            firebase.auth().onAuthStateChanged((user) => {
                if (user) {
                    // 로그인 성공
                    loginContainer.style.display = 'none';
                    gameContainer.style.display = 'flex';
                    userNameElement.textContent = user.displayName;
                    
                    // 최고 점수 표시
                    getHighScore(user.uid).then(highScore => {
                        highScoreElement.textContent = `최고 점수: ${highScore}`;
                        
                        // 게임에서 사용자 정보에 접근할 수 있도록 전역 변수로 저장
                        window.currentUser = {
                            uid: user.uid,
                            displayName: user.displayName,
                            email: user.email,
                            highScore: highScore
                        };
                    });
                    
                    // 게임 점수 저장 함수 (게임에서 호출할 수 있도록)
                    window.saveGameScore = function(score) {
                        if (!user) return;
                        
                        const userRef = firebase.firestore().collection('scores').doc(user.uid);
                        
                        // 트랜잭션으로 최고 점수 업데이트
                        firebase.firestore().runTransaction(transaction => {
                            return transaction.get(userRef).then(doc => {
                                if (!doc.exists) {
                                    transaction.set(userRef, {
                                        displayName: user.displayName,
                                        highScore: score,
                                        lastScore: score,
                                        timestamp: firebase.firestore.FieldValue.serverTimestamp()
                                    });
                                    return score;
                                }
                                
                                const data = doc.data();
                                const highScore = data.highScore || 0;
                                
                                if (score > highScore) {
                                    transaction.update(userRef, { 
                                        highScore: score,
                                        lastScore: score,
                                        timestamp: firebase.firestore.FieldValue.serverTimestamp()
                                    });
                                    return score;
                                } else {
                                    transaction.update(userRef, { 
                                        lastScore: score,
                                        timestamp: firebase.firestore.FieldValue.serverTimestamp()
                                    });
                                    return highScore;
                                }
                            });
                        }).then(highScore => {
                            highScoreElement.textContent = `최고 점수: ${highScore}`;
                            window.currentUser.highScore = highScore;
                        }).catch(error => {
                            console.error('점수 저장 오류:', error);
                        });
                    };
                } else {
                    // 로그아웃 상태
                    loginContainer.style.display = 'flex';
                    gameContainer.style.display = 'none';
                    window.currentUser = null;
                }
            });
        } else {
            // Firebase 없이 게스트 모드로 실행
            window.saveGameScore = function(score) {
                console.log(`게스트 모드: 점수 ${score}점`);
                // 로컬 스토리지에 점수 저장 (선택사항)
