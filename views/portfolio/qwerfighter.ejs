            };
            
            // 게스트 모드 UI 조정
            userNameElement.textContent = "게스트";
            const savedHighScore = localStorage.getItem('highScore') || 0;
            highScoreElement.textContent = `최고 점수: ${savedHighScore}`;
            logoutElement.style.display = 'none';
        }
