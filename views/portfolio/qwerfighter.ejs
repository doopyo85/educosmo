        // 게스트 로그인 처리 함수
        function handleGuestLogin() {
            // 로그인 화면을 숨기고 게임 화면 표시
            loginContainer.style.display = 'none';
            gameContainer.style.display = 'flex';
            
            // 게스트 사용자 정보 설정
            userNameElement.textContent = "게스트";
            
            // 로컬 스토리지에서 게스트 점수 불러오기
            const savedHighScore = localStorage.getItem('guestHighScore') || 0;
            highScoreElement.textContent = `최고 점수: ${savedHighScore}`;
            
            // 로그아웃 버튼 동작 설정
            logoutElement.addEventListener('click', () => {
                window.location.reload(); // 페이지 새로고침으로 로그인 화면으로 돌아감
            });
            
            // 게임에서 사용자 정보에 접근할 수 있도록 전역 변수로 저장
            window.currentUser = {
                uid: 'guest_' + Date.now(),
                displayName: '게스트',
                email: null,
                highScore: savedHighScore
            };
            
            // 게임 점수 저장 함수 정의 (로컬 스토리지 사용)
            window.saveGameScore = function(score) {
                const highScore = parseInt(localStorage.getItem('guestHighScore') || 0);
                
                if (score > highScore) {
                    localStorage.setItem('guestHighScore', score);
                    highScoreElement.textContent = `최고 점수: ${score}`;
                    window.currentUser.highScore = score;
                }
                
                // 점수 기록 저장 (최근 5개)
                try {
                    let scoreHistory = JSON.parse(localStorage.getItem('guestScoreHistory') || '[]');
                    scoreHistory.push({
                        score: score,
                        timestamp: new Date().toISOString()
                    });
                    
                    // 최대 5개 기록만 유지
                    if (scoreHistory.length > 5) {
                        scoreHistory = scoreHistory.slice(-5);
                    }
                    
                    localStorage.setItem('guestScoreHistory', JSON.stringify(scoreHistory));
                } catch (e) {
                    console.error('점수 기록 저장 오류:', e);
                }
            };
        }
        
        // 게스트 로그인 버튼 이벤트
        guestLoginButton.addEventListener('click', handleGuestLogin);
        
        // Firebase 설정이 있는 경우만 Firebase 로그인 기능 활성화
        if (firebase) {
            // Google 로그인 버튼 이벤트
            loginButton.addEventListener('click', () => {
                const provider = new firebase.auth.GoogleAuthProvider();
                firebase.auth().signInWithPopup(provider)
