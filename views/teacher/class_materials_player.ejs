        <script>
            // Modal Instances
            const bookModal = new bootstrap.Modal(document.getElementById('bookModal'));
            const mediaViewerModal = new bootstrap.Modal(document.getElementById('mediaViewerModal'));

            // State
            let currentBookSessions = [];
            let currentSessionIndex = 0;

            function openBookModal(el) {
                const title = el.getAttribute('data-title');
                // Store sessions globally for the player context
                currentBookSessions = JSON.parse(el.getAttribute('data-sessions') || '[]');

                if (currentBookSessions.length === 0) {
                    alert('Îì±Î°ùÎêú Í∞ïÏùòÍ∞Ä ÏóÜÏäµÎãàÎã§.');
                    return;
                }

                // Directly open the Split Player with the first lesson
                openPlayer(0, 'video');
            }

            // --- Split Player Logic ---

            function openPlayer(index, type = 'video') {
                currentSessionIndex = index;
                const session = currentBookSessions[index];
                if (!session) return;

                // 1. Set Title
                document.getElementById('mediaViewerTitle').textContent = session.name;

                // 2. Load Video (Left Panel)
                const videoContainer = document.getElementById('videoIframeContainer');
                const btnFs = document.getElementById('btnVideoFs');

                if (session.videoUrl) {
                    let embedUrl = session.videoUrl;
                    if (session.videoUrl.includes('youtu.be') || session.videoUrl.includes('youtube.com')) {
                        const videoId = session.videoUrl.split('/').pop().split('?')[0];
                        embedUrl = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1';
                    }
                    videoContainer.innerHTML = `<iframe src="${embedUrl}" allow="autoplay; fullscreen" allowfullscreen style="border:0;"></iframe>`;
                    btnFs.style.display = 'flex'; // Show fullscreen button
                } else {
                    videoContainer.innerHTML = `<div class="d-flex align-items-center justify-content-center h-100 text-muted"><i class="bi bi-play-circle fs-1 me-2 opacity-50"></i><br>Îì±Î°ùÎêú ÏòÅÏÉÅÏù¥ ÏóÜÏäµÎãàÎã§.</div>`;
                    btnFs.style.display = 'none';
                }

                // 3. Prepare Right Panel Tabs
                updatePlayerList();       // Re-render list to show active item
                updatePlayerMaterial();   // Load images for this session

                // 4. Switch Tab based on 'type'
                if (type === 'material') {
                    switchPlayerTab('tab-material');
                } else {
                    // Default to list if opening video, or stay on current tab? 
                    // Let's default to List for better context.
                    switchPlayerTab('tab-list');
                }

                mediaViewerModal.show();
            }

            // Render the Session List inside the Player
            function updatePlayerList() {
                const listContainer = document.getElementById('playerSessionList');
                listContainer.innerHTML = '';

                currentBookSessions.forEach((session, idx) => {
                    const isActive = idx === currentSessionIndex;
                    const hasVideo = !!session.videoUrl;
                    const topicText = session.topic ? `<span class="pl-sub"> - ${session.topic}</span>` : '';

                    const div = document.createElement('div');
                    div.className = `playlist-item ${isActive ? 'active' : ''} ${hasVideo ? 'has-video' : ''}`;
                    div.onclick = () => openPlayer(idx, 'video'); // clicking item switches to it

                    div.innerHTML = `
                        <i class="bi ${isActive ? 'bi-play-circle-fill' : (hasVideo ? 'bi-play-circle' : 'bi-lock')} pl-status"></i>
                        <div class="pl-info">
                            <span class="pl-title">${session.name}</span>
                            ${topicText}
                        </div>
                        <span style="font-size: 0.8rem; color: #ced4da;">${idx + 1}Í∞ï</span>
                    `;
                    listContainer.appendChild(div);
                });
            }

            function updatePlayerMaterial() {
                const container = document.getElementById('materialContainer');
                const session = currentBookSessions[currentSessionIndex];

                if (!session || !session.images || session.images.length === 0) {
                    container.innerHTML = '<p class="text-muted mt-5">Îì±Î°ùÎêú ÍµêÏïà Ïù¥ÎØ∏ÏßÄÍ∞Ä ÏóÜÏäµÎãàÎã§.</p>';
                } else {
                    const html = session.images.map(img => `
                        <img src="${img}" class="material-img" loading="lazy" referrerpolicy="no-referrer">
                    `).join('');
                    container.innerHTML = html;
                }
            }

            function switchPlayerTab(tabId) {
                // Remove active classes
                document.querySelectorAll('.player-tab-btn').forEach(btn => btn.classList.remove('active'));
                document.querySelectorAll('.player-tab-content').forEach(content => content.classList.remove('active'));

                // Add active classes
                document.getElementById(tabId).classList.add('active');

                // Find button to highlight (simple match via onclick attribute or order)
                // Let's just find by text or order for simplicity in this generated code
                const btns = document.querySelectorAll('.player-tab-btn');
                if (tabId === 'tab-list') btns[0].classList.add('active');
                if (tabId === 'tab-material') btns[1].classList.add('active');
                if (tabId === 'tab-notes') btns[2].classList.add('active');
            }

            function toggleVideoFullscreen(e) {
                e.stopPropagation();
                const videoSection = document.getElementById('videoSection');

                if (!document.fullscreenElement) {
                    if (videoSection.requestFullscreen) {
                        videoSection.requestFullscreen();
                    } else if (videoSection.webkitRequestFullscreen) { /* Safari */
                        videoSection.webkitRequestFullscreen();
                    } else if (videoSection.msRequestFullscreen) { /* IE11 */
                        videoSection.msRequestFullscreen();
                    }
                } else {
                    if (document.exitFullscreen) {
                        document.exitFullscreen();
                    }
                }
            }

            // Clear on close
            document.getElementById('mediaViewerModal').addEventListener('hidden.bs.modal', function () {
                document.getElementById('videoIframeContainer').innerHTML = '';
            });
        </script>
