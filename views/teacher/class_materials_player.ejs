        }

        .book-item {
            position: relative;
            cursor: pointer;
            transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            perspective: 1000px;
            margin: 0 auto;
            /* Center in grid cell */
            width: 100%;
            max-width: 200px;
            /* Enforce uniform width */
        }

        .book-item:hover {
            transform: translateY(-8px) scale(1.02);
            z-index: 10;
        }

        .book-cover {
            position: relative;
            width: 100%;
            /* Strict Aspect Ratio (A4) using padding hack for cross-browser consistency */
            padding-top: 141.4%;
            height: 0;
            /* User Request: Square, sharp corners "Magazine style" */
            border-radius: 2px;
            box-shadow:
                -2px 0 0 rgba(255, 255, 255, 0.2) inset,
                /* Spine highlight */
                4px 4px 12px rgba(0, 0, 0, 0.15),
                /* Drop shadow */
                1px 0 2px rgba(0, 0, 0, 0.1);
            /* Spine definition */
            overflow: hidden;
            background-color: #fff;
            border: 1px solid #eee;
        }

        /* Book Spine Effect */
        .book-cover::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: linear-gradient(to right, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0) 100%);
            z-index: 5;
            pointer-events: none;
        }

        .book-cover img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Fallback Text Cover - Enhanced "Real Book" Look */
        .book-cover.text-only {
            background-image: linear-gradient(to right, rgba(0, 0, 0, 0.05) 0%, rgba(255, 255, 255, 0.1) 20%, rgba(0, 0, 0, 0.05) 100%);
            box-shadow: inset 1px 0 2px rgba(255, 255, 255, 0.3), inset -1px 0 2px rgba(0, 0, 0, 0.05);
            color: #2c3e50;
        }

        /* The Spine/Binding Line */
        .book-cover.text-only::after {
            content: '';
            position: absolute;
            top: 0;
            bottom: 0;
            left: 12px;
            width: 2px;
            background: rgba(0, 0, 0, 0.1);
            box-shadow: 1px 0 0 rgba(255, 255, 255, 0.2);
        }

        .book-cover.text-only .tit {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-45%, -50%);
            /* Adjusted for spine offset */
            width: 85%;
            text-align: center;
            font-family: 'Noto Serif KR', serif;
            font-weight: 700;
            font-size: 1.1rem;
            word-break: keep-all;
            line-height: 1.35;
            text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5);
            padding-left: 10px;
            /* Slight offset from spine */
        }

        .book-label {
            margin-top: 12px;
            text-align: center;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--lib-text-primary);
            font-family: var(--lib-font-serif);
            opacity: 0.9;

            /* Fix alignment: Force constant height for titles */
            height: 44px;
            line-height: 1.4;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        /* === Empty State === */
        .empty-shelf {
            text-align: center;
            padding: 80px 20px;
            color: #95a5a6;
            font-family: var(--lib-font-serif);
        }
    </style>

