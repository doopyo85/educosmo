        <!-- Book Detail Modal -->
        <div class="modal fade" id="bookModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content book-modal-content">
                    <div class="modal-header book-modal-header">
                        <h5 class="modal-title book-modal-title" id="bookModalTitle">ÍµêÏû¨ ÏÉÅÏÑ∏</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-0">
                        <ul class="session-list" id="bookSessionList">
                            <!-- Dynamic Content -->
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Video/Image Viewer Modal -->
        <div class="modal fade" id="mediaViewerModal" tabindex="-1" aria-hidden="true" style="z-index: 1060;">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content bg-dark text-white border-0">
                    <div class="modal-header border-bottom border-secondary">
                        <h5 class="modal-title" id="mediaViewerTitle">ÎØ∏ÎîîÏñ¥ Î∑∞Ïñ¥</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-0" id="mediaViewerBody"
                        style="min-height: 500px; display: flex; align-items: center; justify-content: center; background: #000;">
                        <!-- VideoFrame or Image Carousel -->
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Modal Instances
            const bookModal = new bootstrap.Modal(document.getElementById('bookModal'));
            const mediaViewerModal = new bootstrap.Modal(document.getElementById('mediaViewerModal'));

            function openBookModal(el) {
                const title = el.getAttribute('data-title');
                const sessions = JSON.parse(el.getAttribute('data-sessions') || '[]');

                document.getElementById('bookModalTitle').textContent = title;
                const listContainer = document.getElementById('bookSessionList');
                listContainer.innerHTML = '';

                if (sessions.length === 0) {
                    listContainer.innerHTML = '<li class="p-4 text-center text-muted">Îì±Î°ùÎêú Í∞ïÏùòÍ∞Ä ÏóÜÏäµÎãàÎã§.</li>';
                } else {
                    sessions.forEach(session => {
                        const sessionData = JSON.stringify(session).replace(/'/g, "&apos;");

                        const thumb = session.thumbnail || '/resource/profiles/default.webp';
                        const hasVideo = !!session.videoUrl;
                        const hasImages = session.images && session.images.length > 0;

                        // Clean Topic
                        // Sometimes topic is repeated or empty

                        const li = document.createElement('li');
                        li.className = 'session-item';
                        li.innerHTML = `
                         <img src="${thumb}" class="session-thumb" alt="thumb" loading="lazy">
                         <div class="session-info">
                             <div class="session-title">${session.name}</div>
                             <div class="session-topic">${session.topic || ''}</div>
                         </div>
                         <div class="session-actions">
                             <button class="btn-action ${hasVideo ? '' : 'disabled'}" onclick='openVideo(${sessionData})' title="ÏòÅÏÉÅ Î≥¥Í∏∞">
                                 <i class="bi bi-play-fill fs-4"></i>
                             </button>
                             <button class="btn-action ${hasImages ? '' : 'disabled'}" onclick='openImages(${sessionData})' title="ÍµêÏïà Î≥¥Í∏∞">
                                 <i class="bi bi-images"></i>
                             </button>
                         </div>
                    `;
                        listContainer.appendChild(li);
                    });
                }

                bookModal.show();
            }

            function openVideo(session) {
                const container = document.getElementById('mediaViewerBody');
                const title = document.getElementById('mediaViewerTitle');
                title.textContent = session.name + ' - ÏòÅÏÉÅ';

                let embedUrl = session.videoUrl;
                if (session.videoUrl.includes('youtu.be') || session.videoUrl.includes('youtube.com')) {
                    const videoId = session.videoUrl.split('/').pop().split('?')[0];
                    embedUrl = 'https://www.youtube.com/embed/' + videoId + '?autoplay=1';
                }

                container.innerHTML = `
                <div class="ratio ratio-16x9 w-100">
                     <iframe src="${embedUrl}" allow="autoplay; fullscreen" allowfullscreen></iframe>
                </div>
            `;
                mediaViewerModal.show();
            }

            function openImages(session) {
                const container = document.getElementById('mediaViewerBody');
                const title = document.getElementById('mediaViewerTitle');
                title.textContent = session.name + ' - ÍµêÏïà';

                if (!session.images || session.images.length === 0) return;

                const html = session.images.map(img => `
                <img src="${img}" style="max-width: 100%; height: auto; margin-bottom: 20px; box-shadow: 0 0 20px rgba(0,0,0,0.5);" loading="lazy">
            `).join('');

                container.innerHTML = `
                <div style="width: 100%; height: 100%; overflow-y: auto; padding: 20px; text-align: center;">
                    ${html}
                </div>
            `;
                mediaViewerModal.show();
            }

            document.getElementById('mediaViewerModal').addEventListener('hidden.bs.modal', function () {
                document.getElementById('mediaViewerBody').innerHTML = '';
            });
        </script>
</body>

