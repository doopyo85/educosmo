        <script src="/header.js"></script>

        <script>
            // 캐러셀 제어를 위한 자바스크립트
            document.addEventListener('DOMContentLoaded', function () {
                // 캐러셀 인스턴스 생성
                const carousel = new bootstrap.Carousel(document.getElementById('categoriesCarousel'), {
                    interval: false,  // 자동 슬라이드 비활성화
                    wrap: true        // 마지막 아이템에서 첫 아이템으로 순환
                });

                const elementaryTab = document.getElementById('elementary-tab');
                const secondaryTab = document.getElementById('secondary-tab');

                // 탭 클릭 이벤트 리스너
                elementaryTab.addEventListener('click', function () {
                    carousel.to(0); // 초등 슬라이드로 이동
                });

                secondaryTab.addEventListener('click', function () {
                    carousel.to(1); // 중고등 슬라이드로 이동
                });

                // 탭 상태 업데이트 함수
                function updateTabs(index) {
                    if (index === 0) {
                        // 초등 활성화
                        elementaryTab.classList.add('active');
                        secondaryTab.classList.remove('active');
                    } else {
                        // 중고등 활성화
                        secondaryTab.classList.add('active');
                        elementaryTab.classList.remove('active');
                    }
                }

                // 캐러셀 슬라이드 이벤트 처리
                document.getElementById('categoriesCarousel').addEventListener('slide.bs.carousel', function (event) {
                    // 다음 슬라이드 인덱스 확인
                    const nextIndex = event.to;
                    updateTabs(nextIndex);
                });

                // 다음 버튼 클릭 이벤트 처리
                document.querySelector('.carousel-control-next').addEventListener('click', function (e) {
                    e.stopPropagation(); // 이벤트 버블링 방지
                });

                // 이전 버튼 클릭 이벤트 처리
                document.querySelector('.carousel-control-prev').addEventListener('click', function (e) {
                    e.stopPropagation(); // 이벤트 버블링 방지
                });

                // 키보드 좌우 화살표 이벤트도 유지 (접근성을 위해)
                document.addEventListener('keydown', function (event) {
                    if (event.key === 'ArrowLeft') {
                        carousel.prev();
                    } else if (event.key === 'ArrowRight') {
                        carousel.next();
                    }
                });
            });

            // Pong2 Fallback Logic
            // Pong2 Fallback Logic
            window.handlePong2Click = function (e) {
                e.preventDefault();
                e.stopPropagation(); // Prevents bubbling if clicked from inner button

                const pong2Url = 'https://pong2.app/';

                // Optimistic Navigation: Directly open pong2.app
                // The previous fetch check validation was causing false negatives due to CORS/Network policies.
                // Since pong2.app is a static site with high availability, we prioritize direct access.
                const newWin = window.open(pong2Url, '_blank');

                // Backup: If popup is blocked, try redirecting current window (though _blank is preferred)
                if (!newWin || newWin.closed || typeof newWin.closed == 'undefined') {
                    // Fallback to local computer section if popup failed
                    window.location.href = '/computer';
                }
            };
        </script>
