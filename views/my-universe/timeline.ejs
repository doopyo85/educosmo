<style>
    /* 
     * Subway Style Timeline 
     * "Connected & Continuous"
     */
    :root {
        --timeline-line-color: #E0E0E0;
        --timeline-dot-color: #007AFF;
        --timeline-dot-border: #FFFFFF;
        --timeline-bg: #F5F5F7;
    }

    /* Event Type Colors */
    .timeline-item[data-type="GALLERY"] .timeline-dot {
        border-color: #007AFF;
    }

    .timeline-item[data-type="BLOG"] .timeline-dot {
        border-color: #FF9500;
    }

    .timeline-item[data-type="BADGE"] .timeline-dot {
        border-color: #FFD60A;
    }

    .timeline-item[data-type="SOLVE"] .timeline-dot {
        border-color: #34C759;
    }

    .timeline-item[data-type="LOG"] .timeline-dot {
        border-color: #8E8E93;
    }

    .timeline-wrapper {
        display: flex;
        gap: 20px;
        max-width: 1200px;
        margin: 0 auto;
        padding-top: 20px;
        height: calc(100vh - 140px);
    }

    /* Left Panel: Subway List */
    .timeline-container {
        flex: 1;
        background: #FFFFFF;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        padding: 30px 20px;
        overflow-y: auto;
        /* Custom Scrollbar */
        scrollbar-width: thin;
        scrollbar-color: #d1d1d1 transparent;
    }

    .timeline-container::-webkit-scrollbar {
        width: 6px;
    }

    .timeline-container::-webkit-scrollbar-thumb {
        background-color: #d1d1d1;
        border-radius: 10px;
    }

    /* Right Panel: Detail View */
    .detail-panel {
        flex: 1.2;
        background: #FFFFFF;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        padding: 40px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: 100%;
        position: sticky;
        top: 20px;
    }

    /* Subway Items */
    .timeline-list {
        position: relative;
        padding-left: 20px;
    }

    /* Continuous Line */
    .timeline-list::before {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 29px;
        /* Adjust to center with dots */
        width: 3px;
        background: var(--timeline-line-color);
        z-index: 0;
    }

    .timeline-group-date {
        font-size: 0.9rem;
        font-weight: 700;
        color: #86868B;
        background: #FFFFFF;
        /* Mask line behind date */
        position: relative;
        z-index: 1;
        display: inline-block;
        margin: 20px 0 10px 0;
        padding: 4px 10px;
        border-radius: 12px;
        border: 1px solid #F2F2F7;
    }

    .timeline-item {
        position: relative;
        padding: 15px 15px 15px 50px;
        /* Space for line/dot */
        margin-bottom: 15px;
        cursor: pointer;
        transition: all 0.2s ease;
        border-radius: 12px;
    }

    .timeline-item:hover {
        background-color: #F9F9F9;
    }

    .timeline-item.active {
        background-color: #EFF6FF;
    }

    /* Station Dot */
    .timeline-dot {
        position: absolute;
        left: 22px;
        top: 22px;
        width: 16px;
        height: 16px;
        background: #FFFFFF;
        border: 4px solid var(--timeline-dot-color);
        border-radius: 50%;
        z-index: 1;
        transition: transform 0.2s;
    }

    .timeline-item:hover .timeline-dot {
        transform: scale(1.2);
    }

    .timeline-item.active .timeline-dot {
        background: var(--timeline-dot-color);
        box-shadow: 0 0 0 4px rgba(0, 122, 255, 0.2);
    }

    /* Icon within Dot? No, "Subway" usually just has dots. 
       Let's put the icon in the content area for context */

    .timeline-content-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .timeline-main-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .timeline-time {
        font-size: 0.8rem;
        color: #86868B;
        min-width: 60px;
    }

    .timeline-title {
        font-weight: 600;
        color: #1D1D1F;
        font-size: 1rem;
    }

    .timeline-icon-small {
        color: var(--timeline-dot-color);
        font-size: 1.1rem;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 60px 0;
        color: #86868B;
    }

    .empty-state i {
        font-size: 3rem;
        margin-bottom: 15px;
        opacity: 0.3;
    }
</style>

<div class="timeline-wrapper">
    <!-- Left: Timeline List -->
    <div class="timeline-container">
        <div class="timeline-list">
            <% let lastDate='' ; const items=locals.timelineItems || []; if (items.length> 0) {
                items.forEach(function(item) {
                %>

                <% if (item.dateStr !==lastDate) { lastDate=item.dateStr; %>
                    <div class="mb-2">
                        <span class="timeline-group-date">
                            <%= item.dateStr %>
                        </span>
                    </div>
                    <% } %>

                        <div class="timeline-item" onclick="handleClick(this)" data-type="<%= item.action_type %>"
                            data-title="<%= item.title %>" data-time="<%= item.dateStr %> <%= item.timeStr %>"
                            data-url="<%= item.url %>" data-status="<%= item.status %>">

                            <div class="timeline-dot"></div>

                            <div class="timeline-content-row">
                                <div class="timeline-main-info">
                                    <i class="bi <%= item.iconClass %> timeline-icon-small"></i>
                                    <div>
                                        <div class="timeline-title">
                                            <%= item.title %>
                                        </div>
                                        <div class="timeline-time">
                                            <%= item.timeStr %> • <%= item.action_type || 'Activity' %>
                                        </div>
                                    </div>
                                </div>
                                <i class="bi bi-chevron-right text-muted" style="font-size: 0.8rem;"></i>
                            </div>
                        </div>

                        <% }); } else { %>
                            <div class="empty-state">
                                <i class="bi bi-clock-history"></i>
                                <p>아직 기록된 활동이 없습니다.</p>
                            </div>
                            <% } %>
        </div>
    </div>

    <!-- Right: Detail Panel -->
    <div class="detail-panel" id="detailPanel">
        <div class="text-muted mb-3">
            <i class="bi bi-app-indicator" style="font-size: 4rem; opacity: 0.1;"></i>
        </div>
        <h4 class="fw-bold mb-2">활동을 선택하세요</h4>
        <p class="text-muted">좌측 타임라인에서 항목을 클릭하면<br>상세 정보를 확인할 수 있습니다.</p>
    </div>
</div>

<script>
    function handleClick(element) {
        // Read data attributes
        const title = element.dataset.title;
        const time = element.dataset.time;
        const url = element.dataset.url;
        const status = element.dataset.status;

        // Active state handling
        document.querySelectorAll('.timeline-item').forEach(el => el.classList.remove('active'));
        element.classList.add('active');

        // Update detail panel with nice animation
        const panel = document.getElementById('detailPanel');
        panel.style.opacity = '0';

        setTimeout(() => {
            panel.innerHTML = `
                <div class="animate-fade-in text-center">
                    <div class="mb-4">
                        <span class="badge bg-light text-dark rounded-pill px-3 py-2 border">
                            ${time}
                        </span>
                    </div>
                    <h2 class="fw-bold mb-3" style="color: #1D1D1F;">${title}</h2>
                    <div class="p-4 rounded-4 text-start d-inline-block" style="background: #F5F5F7; min-width: 300px;">
                        <div class="mb-3">
                            <label class="small text-muted fw-bold text-uppercase">URL</label>
                            <div class="text-break font-monospace small" style="color: #007AFF;">${url}</div>
                        </div>
                        <div>
                            <label class="small text-muted fw-bold text-uppercase">Status</label>
                            <div class="fw-medium">${status || 'Success'}</div>
                        </div>
                    </div>
                </div>
            `;
            panel.style.opacity = '1';
        }, 200);
    }
</script>