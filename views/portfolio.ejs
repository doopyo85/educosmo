<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>나의 학습 포트폴리오</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Subway Map Timeline Styles */
        .timeline-container {
            height: calc(100vh - 150px);
            overflow-y: auto;
            border-right: 1px solid #dee2e6;
            padding-right: 20px;
        }

        .timeline-list {
            position: relative;
            padding-left: 30px;
            list-style: none;
        }

        .timeline-line {
            position: absolute;
            left: 15px;
            top: 20px;
            bottom: 0;
            width: 4px;
            background-color: #0d6efd;
            /* Subway Line Color */
            border-radius: 2px;
        }

        .timeline-node {
            position: relative;
            margin-bottom: 30px;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .timeline-node:hover {
            transform: translateX(5px);
        }

        .timeline-station {
            position: absolute;
            left: -22px;
            top: 5px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background-color: white;
            border: 4px solid #0d6efd;
            z-index: 1;
            transition: all 0.2s;
        }

        .timeline-node.active .timeline-station {
            background-color: #0d6efd;
            transform: scale(1.3);
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.2);
        }

        .timeline-content {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 12px;
            border: 1px solid #e9ecef;
        }

        .timeline-node.active .timeline-content {
            background: #e7f1ff;
            border-color: #b6d4fe;
        }

        .timeline-date {
            font-size: 0.8rem;
            color: #6c757d;
            font-weight: 600;
        }

        .timeline-title {
            font-size: 1rem;
            font-weight: bold;
            margin: 4px 0;
        }

        /* Viewer Styles */
        .viewer-container {
            height: calc(100vh - 150px);
            overflow-y: auto;
            padding-left: 20px;
        }

        .project-card-large {
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 16px;
            overflow: hidden;
        }

        .project-img-large {
            height: 300px;
            background-size: cover;
            background-position: center;
            background-color: #eee;
        }

        .activity-detail-card {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>

        <div class="container-fluid py-4">
            <div class="row">
                <!-- Left Column: Subway Timeline -->
                <div class="col-md-4 col-lg-3 timeline-container simple-scrollbar">
                    <h4 class="mb-4 ps-2"><i class="bi bi-geo-alt-fill text-primary me-2"></i>학습 여정</h4>

                    <div class="timeline-list">
                        <div class="timeline-line"></div>

                        <% if (locals.activityLogs && activityLogs.length> 0) { %>
                            <% activityLogs.forEach((log, index)=> { %>
                                <div class="timeline-node <%= index === 0 ? 'active' : '' %>"
                                    onclick="selectActivity(this, <%= JSON.stringify(log) %>)">
                                    <div class="timeline-station"></div>
                                    <div class="timeline-content">
                                        <div class="timeline-date">
                                            <%= new Date(log.created_at).toLocaleString('ko-KR', { month: 'long' ,
                                                day: 'numeric' , hour: '2-digit' , minute: '2-digit' }) %>
                                        </div>
                                        <div class="timeline-title">
                                            <% if (log.action_type==='portfolio_upload' ) { %>
                                                <i class="bi bi-controller text-primary me-1"></i> 게임 프로젝트
                                                <% } else if (log.action_type==='login' ) { %>
                                                    <i class="bi bi-box-arrow-in-right text-success me-1"></i> 로그인
                                                    <% } else { %>
                                                        <i class="bi bi-activity text-secondary me-1"></i>
                                                        <%= log.action_type %>
                                                            <% } %>
                                        </div>
                                        <div class="text-truncate small text-muted">
                                            <%= log.action_detail || '상세 활동 내용' %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="text-center py-5 text-muted">
                                            <p>학습 기록이 없습니다.</p>
                                        </div>
                                        <% } %>

                                            <!-- Top Node (Now) -->
                                            <div class="timeline-station"
                                                style="top: -10px; background: #0d6efd; border-color: white;"></div>
                    </div>
                </div>

                <!-- Right Column: Content Viewer -->
                <div class="col-md-8 col-lg-9 viewer-container simple-scrollbar" id="viewerPanel">
                    <!-- Dynamic Content Will Be Loaded Here -->
                    <div class="text-center py-5 text-muted h-100 d-flex flex-column justify-content-center">
                        <i class="bi bi-hand-index-thumb fs-1 mb-3"></i>
                        <h3>왼쪽 타임라인에서 활동을 선택하세요</h3>
                        <p>학습 이력이나 프로젝트를 클릭하면 상세 내용을 볼 수 있습니다.</p>

                        <div class="mt-5">
                            <button class="btn btn-outline-primary" data-bs-toggle="modal"
                                data-bs-target="#uploadModal">
                                <i class="bi bi-cloud-upload me-2"></i>새 프로젝트 업로드
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upload Modal (Hidden by default) -->
        <div class="modal fade" id="uploadModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">새 프로젝트 업로드</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p class="text-muted small">Pygame 프로젝트 ZIP 파일을 업로드하세요.</p>
                        <div class="mb-3">
                            <label class="form-label">프로젝트 이름</label>
                            <input type="text" class="form-control" id="mProjectName">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">설명</label>
                            <textarea class="form-control" id="mProjectDesc"></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">파일 (ZIP)</label>
                            <input type="file" class="form-control" id="mProjectFile" accept=".zip">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                        <button type="button" class="btn btn-primary" onclick="uploadProjectModal()">업로드</button>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>

            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

            <script>
                // Initial Upload Logic (Same as before but simplified for Modal)
                function uploadProjectModal() {
                    const fileInput = document.getElementById('mProjectFile');
                    const nameInput = document.getElementById('mProjectName');
                    const descInput = document.getElementById('mProjectDesc');

                    if (!fileInput.files.length) return alert('파일을 선택해주세요.');

                    const formData = new FormData();
                    formData.append('projectFile', fileInput.files[0]);
                    formData.append('projectName', nameInput.value);
                    formData.append('projectDesc', descInput.value);

                    fetch('/api/portfolio/upload', {
                        method: 'POST',
                        body: formData
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                alert('업로드 성공!');
                                location.reload(); // Refresh to see in timeline
                            } else {
                                alert('실패: ' + data.message);
                            }
                        });
                }

                function selectActivity(element, log) {
                    // UI Update
                    document.querySelectorAll('.timeline-node').forEach(el => el.classList.remove('active'));
                    element.classList.add('active');

                    const viewer = document.getElementById('viewerPanel');
                    let content = '';

                    // Safe parsing of action_detail
                    let detail = {};
                    try {
                        detail = JSON.parse(log.action_detail);
                    } catch (e) {
                        detail = { raw: log.action_detail };
                    }

                    if (log.action_type === 'portfolio_upload') {
                        // Render Project Card
                        const projectId = detail.projectId;
                        const img = detail.thumbnail || '/resource/pygame-default.png';

                        content = `
                    <div class="fade-in">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2><i class="bi bi-controller text-primary me-2"></i>${detail.projectName || '프로젝트'}</h2>
                            <span class="badge bg-primary">Portfolio Project</span>
                        </div>
                        
                        <div class="card project-card-large mb-4">
                            <div class="project-img-large" style="background-image: url('${img}');"></div>
                            <div class="card-body p-4">
                                <h5>프로젝트 설명</h5>
                                <p class="lead">${detail.description || '설명이 없습니다.'}</p>
                                <hr>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-lg btn-success" onclick="location.href='/portfolio/run/${projectId}'">
                                        <i class="bi bi-play-fill me-2"></i>게임 실행하기
                                    </button>
                                    <button class="btn btn-lg btn-outline-secondary">
                                        <i class="bi bi-code-slash me-2"></i>코드 보기
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                    } else if (log.action_type.includes('entry')) {
                        // Entry Activity
                        content = `
                    <div class="activity-detail-card fade-in">
                        <h2 class="mb-3"><img src="/resource/entry_logo.png" height="30" class="me-2">Enrty 활동</h2>
                        <div class="alert alert-warning">
                            <strong>${log.url}</strong>
                        </div>
                        <pre class="bg-light p-3 rounded border">${JSON.stringify(detail, null, 2)}</pre>
                        <p class="text-muted">사용자가 엔트리 학습 환경에서 활동했습니다.</p>
                    </div>
                `;
                    } else {
                        // Generic
                        content = `
                     <div class="activity-detail-card fade-in">
                        <h2 class="mb-3"><i class="bi bi-clock-history me-2"></i>${log.action_type}</h2>
                        <p class="text-muted">${new Date(log.created_at).toLocaleString()}</p>
                        <div class="alert alert-light border">
                            ${log.action_detail || log.url}
                        </div>
                        <p>IP: ${log.ip_address}</p>
                    </div>
                `;
                    }

                    viewer.innerHTML = content;
                }

                // Auto-select first item on load
                document.addEventListener('DOMContentLoaded', () => {
                    const firstNode = document.querySelector('.timeline-node');
                    if (firstNode) firstNode.click();
                });
            </script>
</body>

</html>