# 서버 설정
NODE_ENV=development
PORT=3000
BASE_URL=https://app.codingnplay.co.kr

# Redis 설정
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=educodingnplay:sess:

# 세션 설정
EXPRESS_SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=3600000
